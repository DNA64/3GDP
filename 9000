#3G Downgrader Pro uses a quick command line tool called "serial" to display the iPhones Serial Number,
#special thanks to the Author: Nik S Denin from http://weho.ru for the creation of this utility.

set -e
echo "Loading yellowsn0w..."; sleep 1 
echo "yellowsn0w was created by members"
echo "of the iPhone Dev Team."
echo "vist http://yellowsn0w.com for more info or"; sleep 2 
echo ""
exec /usr/bin/yellowsn0w
echo "please wait while rebooting the device..."
sleep 2
su -c reboot
exit